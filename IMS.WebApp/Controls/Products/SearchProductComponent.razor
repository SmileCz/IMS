<div class="input-group">
    <input type="text"
           class="form-control"
           placeholder="Type product name here to search"
           @bind-value="_productNameToSearch"/>
    <button type="button"
            class="btn-success input-group-text"
            @onclick="OnSearch">
        Search
    </button>
</div>

@code {

    private string _productNameToSearch = string.Empty;

    private void OnSearch()
    {
        OnSearchProduct.InvokeAsync(_productNameToSearch);
    }

    [Parameter]
    public EventCallback<string> OnSearchProduct { get; set; }

}