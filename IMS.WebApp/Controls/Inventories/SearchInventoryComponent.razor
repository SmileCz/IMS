<MudGrid>
    <MudItem xs="10">
        <MudTextField @bind-Value="_inventoryNameToSearch" HelperText="Type inventory name here to search"></MudTextField>
    </MudItem>
    <MudItem xs="2">
        <MudButton @onclick="OnSearch" Color="Color.Primary" Variant="Variant.Filled" StartIcon="@Icons.Material.Filled.Search">Search</MudButton>
    </MudItem>
</MudGrid>


@code {

    private string _inventoryNameToSearch = string.Empty;

    private void OnSearch()
    {
        OnSearchInventory.InvokeAsync(_inventoryNameToSearch);
    }

    [Parameter]
    public EventCallback<string> OnSearchInventory { get; set; }

}